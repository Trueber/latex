\mode<presentation>

% BFH Farben definieren
\definecolor{bfhorange}{rgb}{0.98,0.647,0}
\definecolor{bfhgrau}{rgb}{0.412,0.49,0.569}

% Settings für Titelseite
\setbeamercolor*{Titel}{fg=white}
\setbeamercolor*{Titel_Grafik}{fg=bfhgrau}
\setbeamercolor*{Untertitel}{fg=white}
\setbeamercolor*{Untertitel_Grafik}{fg=bfhgrau}
\setbeamercolor*{Autor}{fg=black}
\setbeamercolor*{Datum}{fg=white}
\setbeamercolor*{Frametitel}{fg=bfhgrau}
\setbeamercolor*{Titelfuss}{fg=bfhgrau}

% Itemize und Enumerate
\setbeamercolor{enumerate item}{fg=bfhorange}  
\setbeamercolor{enumerate subitem}{fg=bfhorange}  
\setbeamercolor{enumerate subsubitem}{fg=bfhorange}  
\setbeamercolor{itemize item}{fg=bfhorange}
\setbeamercolor{itemize subitem}{fg=bfhorange}
\setbeamercolor{itemize subsubitem}{fg=bfhorange}

% Farbe für Blocktitel
\setbeamercolor{block title}{fg=white, bg=bfhgrau}
\setbeamercolor{block title alerted}{fg=white, bg=bfhorange}

\setbeamercolor{block body}{bg=bfhgrau!20}
\setbeamercolor{block body alerted}{bg=bfhorange!30}

\mode
<all>
